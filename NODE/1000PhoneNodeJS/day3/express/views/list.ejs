<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>list</title>
	<link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
	<%- include header %>
	<table>
		<tr>
			<th>序号</th>
			<th>标题</th>
			<th>内容</th>
		</tr>
		<%= res.length %>

		<% res.forEach(function(item, index){ %>
			<tr>
				<td><%= (++index) %></td>
				<td><a href="./detail?uid=<%= item.uid %>"><%- item.title %></a></td>
				<td><%- item.content %></td>
			</tr>
		<% }) %>

		<tr>
			<td colspan="3">
				<a href="./list?pageNo=1">首页</a>
				<a href="./list?pageNo=<%= pageNo > 1 ? parseInt(pageNo)-1 : 1 %>">上一页</a>
				<a href="./list?pageNo=<%= pageNo < totalPage ? parseInt(pageNo)+1 : totalPage %>">下一页</a>
				<a href="./list?pageNo=<%= totalPage %>">尾页</a>
				<%= pageNo %>/<%= totalPage %>
				共<%= count %>条记录
			</td>
		</tr>
	</table>
</body>
</html>