.store-goods-page {
  background-color: #f3f4f7;
  min-height: 100vh;
}
.store-goods-page .container {
  height: 100vh;
}
.store-goods-page .goods-list {
  display: flex;
  flex-wrap: wrap;
}
.store-goods-page .goods-list .goods-item {
  background-color: #ffffff;
  width: 370rpx;
  margin-bottom: 10rpx;
  position: relative;
  color: #999999;
  font-size: 28rpx;
  height: 372rpx;
}
.store-goods-page .goods-list .goods-item:nth-child(2n+1) {
  margin-right: 10rpx;
}
.store-goods-page .goods-list .goods-item .cover {
  width: 370rpx;
  height: 207rpx;
  display: block;
}
.store-goods-page .goods-list .goods-item .vip {
  position: absolute;
  width: 116rpx;
  height: 40rpx;
  border-radius: 0 0 14rpx 0;
  background-color: #ec3833;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}
.store-goods-page .goods-list .goods-item .goods_name {
  padding: 14rpx 0 14rpx 10rpx;
  line-height: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #303030;
}
.store-goods-page .goods-list .goods-item .goods_number {
  line-height: 1;
  padding: 4rpx 0 4rpx 10rpx;
}
.store-goods-page .goods-list .goods-item .goods_score {
  padding: 8rpx 0 0 10rpx;
}
.store-goods-page .goods-list .goods-item .goods_score .red {
  color: #ec3833;
}
