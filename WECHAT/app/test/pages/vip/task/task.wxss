.vip-task-page .banner image {
  width: 750rpx;
  height: 230rpx;
  display: block;
}
.vip-task-page .nav {
  display: flex;
}
.vip-task-page .nav .nav-item {
  flex-grow: 1;
  height: 80rpx;
  display: flex;
  justify-content: center;
}
.vip-task-page .nav .nav-item.active .inner {
  color: #ec3833;
}
.vip-task-page .nav .nav-item.active .inner:after {
  content: '';
  width: 100%;
  height: 6rpx;
  border-radius: 3rpx;
  display: block;
  background: #ec3833;
  bottom: 0;
  left: 0;
  position: absolute;
}
.vip-task-page .nav .nav-item .inner {
  font-size: 30rpx;
  color: #666666;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 220rpx;
  position: relative;
  padding-bottom: 4rpx;
}
.vip-task-page .task {
  padding-top: 16rpx;
  background-color: #efeff7;
}
.vip-task-page .task .task-item {
  font-size: 0;
  display: flex;
  align-items: center;
  background-color: #ffffff;
}
.vip-task-page .task .task-item:first-child .task-detail {
  border-top: 0;
}
.vip-task-page .task .task-item .icon {
  width: 80rpx;
  height: 80rpx;
  margin-left: 30rpx;
}
.vip-task-page .task .task-item .task-detail {
  padding: 52rpx 0 52rpx 24rpx;
  width: 640rpx;
  position: relative;
  border-top: 1rpx solid #e1e1e1;
}
.vip-task-page .task .task-item .task-detail .task-name {
  font-size: 30rpx;
  color: #303030;
  width: 380rpx;
  line-height: 1;
  padding: 4rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
  top: -2rpx;
}
.vip-task-page .task .task-item .task-detail .task-jl {
  color: #666666;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.vip-task-page .task .task-item .task-detail .s-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}
.vip-task-page .task .task-item .task-detail .status {
  position: absolute;
  width: 148rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  background-color: #088bff;
  right: 32rpx;
  border-radius: 26rpx;
  top: 50%;
  transform: translateY(-50%);
}
.vip-task-page .task .task-item .task-detail .status.finish {
  background-color: #cccccc;
}
